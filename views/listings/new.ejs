<% layout('/layouts/boilerplate') -%>
<div class="row listing-form-container">
  <div class="col-8 offset-2">
    <h3 class="mb-4 fw-bold">Create a New Listing</h3>
    <form
      action="/listings"
      method="post"
      novalidate
      class="needs-validation listing-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="listing[title]"
          id="title"
          placeholder="Title"
          class="form-control"
          required
        />
        <div class="valid-feedback">Title Set</div>
        <div class="invalid-feedback">Please Enter the Title</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          class="form-control"
          id="description"
          required
        ></textarea>
        <div class="valid-feedback">Description Set</div>
        <div class="invalid-feedback">Please Enter the Description</div>
      </div>
      <div class="mb-3">
        <label for="img" class="form-label">Image File</label>
        <input
          type="file"
          name="listing[image]"
          class="form-control"
          id="img"
          required
        />
        <div class="valid-feedback">Image Set</div>
        <div class="invalid-feedback">Please Upload Image</div>
      </div>
      <div class="row mb-3">
        <div class="col-md-4">
          <label for="price" class="form-label fw-medium">Price</label>
          <div class="input-group">
            <span class="input-group-text">â‚¹</span>
            <input
              type="number"
              name="listing[price]"
              placeholder="12000"
              class="form-control"
              id="price"
              required
            />
          </div>
          <div class="valid-feedback">Price Set</div>
          <div class="invalid-feedback">Please Enter Valid Price</div>
        </div>
        <div class="col-md-8">
          <label for="country" class="form-label fw-medium">Country</label>
          <input
            type="text"
            name="listing[country]"
            class="form-control"
            placeholder="India"
            id="country"
            required
          />
          <div class="valid-feedback">Country Set</div>
          <div class="invalid-feedback">Please Enter the Country</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label fw-medium">Location</label>
        <input
          type="text"
          name="listing[location]"
          class="form-control"
          placeholder="Jalandhar,Punjab"
          id="location"
          required
        />
        <div class="valid-feedback">Location Set</div>
        <div class="invalid-feedback">Please Enter the Location</div>
      </div>

      <div class="mb-3">
        <label for="category" class="form-label fw-medium">Category</label>
        <select
          class="form-select"
          name="listing[category]"
          id="category"
          required
        >
          <option value="">Select a category</option>
          <option value="trending">Trending</option>
          <option value="rooms">Rooms</option>
          <option value="iconic cities">Iconic Cities</option>
          <option value="mountains">Mountains</option>
          <option value="castles">Castles</option>
          <option value="amazing pools">Amazing Pools</option>
          <option value="camping">Camping</option>
          <option value="farms">Farms</option>
          <option value="arctic">Arctic</option>
          <option value="luxury">Luxury</option>
          <option value="lake houses">Lake Houses</option>
        </select>
        <div class="valid-feedback">Category Selected</div>
        <div class="invalid-feedback">Please Select a Category</div>
      </div>

      <button class="btn btn-add-listing">Add Listing</button>
    </form>
  </div>
</div>
