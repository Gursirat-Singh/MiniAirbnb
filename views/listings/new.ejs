<% layout('/layouts/boilerplate') -%>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3 class="mb-4">Create a New Listing</h3>
    <form
      action="/listings"
      method="post"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="listing[title]"
          id="title"
          placeholder="Title"
          class="form-control"
          required
        />
        <div class="valid-feedback">Title Set</div>
        <div class="invalid-feedback">Please Enter the Title</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          class="form-control"
          id="description"
          required
        ></textarea>
        <div class="valid-feedback">Description Set</div>
        <div class="invalid-feedback">Please Enter the Description</div>
      </div>
      <div class="mb-3">
        <label for="img" class="form-label">Image File</label>
        <input
          type="file"
          name="listing[image]"
          class="form-control"
          id="img"
          required
        />
        <div class="valid-feedback">Image Set</div>
        <div class="invalid-feedback">Please Upload Image</div>
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            type="number"
            name="listing[price]"
            placeholder="12000"
            class="form-control"
            id="price"
            required
          />
          <div class="valid-feedback">Price Set</div>
          <div class="invalid-feedback">Please Enter Valid Price</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            name="listing[country]"
            class="form-control"
            placeholder="India"
            id="country"
            required
          />
          <div class="valid-feedback">Country Set</div>
          <div class="invalid-feedback">Please Enter the Country</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          name="listing[location]"
          class="form-control"
          placeholder="Jalandhar,Punjab"
          id="location"
          required
        />
        <div class="valid-feedback">Location Set</div>
        <div class="invalid-feedback">Please Enter the Location</div>
      </div>

      <button
        class="btn btn-dark mt-3 mb-5"
        style="background-color: #fe434d; border: none"
      >
        Add Stay
      </button>
    </form>
  </div>
</div>
