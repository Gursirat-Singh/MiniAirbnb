<% layout('/layouts/boilerplate') -%>
<div class="row">
  <div class="col-8 offset-2 mb-5 mt-3">
    <div class="card border-0">
      <div class="col-8 mx-auto offset-2">
        <h1 class="mb-4"><%=listing.title%></h1>
        <img
          src="<%=listing.image.url%>"
          alt="Stay Image"
          class="card-img-top rounded-4 mb-3"
          style="height: 30vh; object-fit: cover"
        />

        <p class="text-secondary my-3"><%=listing.description%></p>
        <h3 class="mb-3">â‚¹<%=listing.price.toLocaleString("en-IN")%></h3>
        <p class="text-secondary mb-4">
          <%=listing.location%>, <%=listing.country%>
        </p>
        <div class="btns">
          <a href="/listings/<%=listing._id%>/edit" class="btn btn-danger px-4"
            >Edit</a
          >
          <form
            class="d-inline"
            action="/listings/<%=listing._id%>?_method=delete"
            method="post"
          >
            <button class="btn btn-dark px-4">Delete</button>
          </form>
        </div>
      </div>
    </div>
    <hr />
    <div class="col-8 mx-auto offset-2 mt-5 mb-4">
      <h4 class="mb-4">Leave a Review</h4>
      <form
        action="/listings/<%=listing._id%>/reviews"
        method="POST"
        novalidate
        class="mb-4 needs-validation"
      >
        <div class="mb-4">
          <label for="rating" class="form-label"
            >Rating: <span id="ratingValue">3</span></label
          >
          <input
            type="range"
            class="form-range"
            min="1"
            max="5"
            value="3"
            name="review[rating]"
            id="rating"
            oninput="updateRating(this.value)"
          />
        </div>
        <div class="mb-4">
          <label for="comment" class="form-label">Comments</label>
          <textarea
            name="review[comment]"
            id="comment"
            rows="5"
            required
            class="form-control"
            placeholder="Write your experience..."
          ></textarea>
          <div class="valid-feedback">Thanks for comments</div>
          <div class="invalid-feedback">Please Enter Comments</div>
        </div>
        <button class="btn btn-success">Submit Review</button>
      </form>
    </div>
    <hr />
    <div class="row">
      <div class="col-8 mx-auto offset-2">
        <h3 class="mb-4">All Reviews</h3>
        <div class="row row-cols-1 row-cols-md-2 g-4">
          <%for(review of listing.reviews){%>
          <div class="col">
            <div class="card h-100 shadow-sm">
              <div class="card-body">
                <h5 class="card-title">
                  <div
                    class="d-flex justify-content-between align-items-center"
                  >
                    <div>
                      <i class="fa-regular fa-circle-user me-2"></i> Gursirat
                      Singh
                    </div>
                    <div class="d-flex align-items-center gap-2">
                      <p class="starability-result mb-0"><%=review.rating%></p>
                      <i class="fa-solid fa-star text-warning"></i>
                    </div>
                  </div>
                </h5>
                <p class="card-text text-muted mb-3"><%=review.comment%></p>
                <form
                  action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=Delete"
                  method="post"
                  class="d-inline"
                >
                  <button class="btn btn-sm btn-dark">
                    <i class="fa-regular fa-trash-can me-1"></i>Delete
                  </button>
                </form>
              </div>
            </div>
          </div>
          <%}%>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function updateRating(value) {
    document.getElementById("ratingValue").textContent = value;
  }
</script>
