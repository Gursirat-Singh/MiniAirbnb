<% if(success && success.length != 0){ %>
<div
  class="alert alert-success alert-dismissible fade show custom-alert col-md-6 col-sm-8 mx-auto"
  role="alert"
  style="
    margin: 1.5rem auto;
    padding: 1rem 1.5rem;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    font-size: 1.1rem;
    border-left: 5px solid #198754;
    background-color: #d1e7dd;
    color: #0f5132;
    transform: translateY(-20px);
    animation: slideDown 0.3s ease forwards;
  "
>
  <i class="fas fa-check-circle me-2"></i>
  <%= success %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
    style="opacity: 0.9; transition: opacity 0.2s"
  ></button>
</div>
<% } %> <% if(error && error.length != 0){ %>
<div
  class="alert alert-danger alert-dismissible fade show custom-alert col-md-6 col-sm-8 mx-auto"
  role="alert"
  style="
    margin: 1.5rem auto;
    padding: 1rem 1.5rem;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    font-size: 1.1rem;
    border-left: 5px solid #dc3545;
    background-color: #f8d7da;
    color: #842029;
    transform: translateY(-20px);
    animation: slideDown 0.3s ease forwards;
  "
>
  <i class="fas fa-exclamation-circle me-2"></i>
  <%= error %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
    style="opacity: 0.9; transition: opacity 0.2s"
  ></button>
</div>
<% } %>
