<% layout('/layouts/boilerplate') -%>
<div class="row login-container">
  <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
    <div class="login-card">
      <h1 class="text-center h3 mb-4 fw-bold">Login to SiraStay</h1>
      <form action="/login" method="post" class="needs-validation" novalidate>
        <div class="mb-4">
          <label for="username" class="form-label">Username</label>
          <input
            type="text"
            name="username"
            id="username"
            class="form-control"
            placeholder="Enter your username"
            required
            autofocus
          />
          <div class="valid-feedback">Username Entered</div>
          <div class="invalid-feedback">Please Enter the Username</div>
        </div>
        <div class="mb-4">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            name="password"
            id="password"
            class="form-control"
            placeholder="Enter your password"
            required
          />
          <div class="valid-feedback">Password Entered</div>
          <div class="invalid-feedback">Please Enter the Password</div>
        </div>

        <div class="d-grid gap-4">
          <button class="btn btn-login">Login</button>
        </div>
      </form>
    </div>
  </div>
</div>
