<% layout('/layouts/boilerplate') -%>
<div class="row login-container">
  <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
    <div class="login-card">
      <h1 class="text-center h3 mb-4">Sign up to SiraStay</h1>
      <form action="/signup" method="post" class="needs-validation" novalidate>
        <div class="mb-4">
          <label for="username" class="form-label">Username</label>
          <input
            type="text"
            name="username"
            id="username"
            class="form-control"
            required
          />
          <div class="valid-feedback">Username Entered</div>
          <div class="invalid-feedback">Please Enter the Username</div>
        </div>

        <div class="mb-4">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            name="email"
            id="email"
            class="form-control"
            required
          />
          <div class="valid-feedback">Email Entered</div>
          <div class="invalid-feedback">Please Enter the Email</div>
        </div>

        <div class="mb-4">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            name="password"
            id="password"
            class="form-control"
            required
          />
          <div class="valid-feedback">Password Entered</div>
          <div class="invalid-feedback">Please Enter the Password</div>
        </div>

        <div class="d-grid gap-4">
          <button class="btn btn-login text-white">Sign up</button>
        </div>
      </form>
    </div>
  </div>
</div>
