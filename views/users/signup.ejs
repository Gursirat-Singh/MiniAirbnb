<% layout('/layouts/boilerplate') -%>
<div class="row mt-5 mb-5">
  <h1 class="text-center mb-4">SignUp on SiraStay</h1>
  <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
    <form action="/signup" method="post" class="needs-validation" novalidate>
      <div class="mb-4">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          required
        />
        <div class="valid-feedback">Username Entered</div>
        <div class="invalid-feedback">Please Enter the Username</div>
      </div>

      <div class="mb-4">
        <label for="email" class="form-label">Email</label>
        <input
          type="email"
          name="email"
          id="email"
          class="form-control"
          required
        />
        <div class="valid-feedback">Email Entered</div>
        <div class="invalid-feedback">Please Enter the Email</div>
      </div>

      <div class="mb-4">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
        <div class="valid-feedback">Password Entered</div>
        <div class="invalid-feedback">Please Enter the Password</div>
      </div>

      <div class="d-grid gap-4">
        <button class="btn btn-success">SignUp</button>
      </div>
    </form>
  </div>
</div>
